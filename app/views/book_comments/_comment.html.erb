<ol>
    <table>
        <% book.book_comments.each do |book_comment| %>
        <tr>
        <td>
          <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size:'80x80' %><%= link_to user.name, user_path(user.id) %></td>
        <td><%= book_comment.comment %></td>
        <% if book_comment.user.id == current_user.id %>
        <td>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, data:
          { confirm: '本当に削除して良いですか?',
            cancel: 'やめる',
            commit: '削除する'}, title: '削除確認', class: "btn btn-danger pull-right" %></td>
            <% end %>
        </tr>
        <% end %>
    </table>
</ol>