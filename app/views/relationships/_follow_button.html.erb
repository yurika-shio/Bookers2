
<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to "Unfollow", unfollow_path(user.id),method: :delete , class: 'btn btn-danger btn-block'  %>
  <% else %>
   <%= form_with url: follow_path(user.id) ,local: true do |f| %>
      <%= hidden_field_tag :follower_id, user.id %>
      <%= f.submit 'Follow', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>


