<div class="container">
  <div class="col-xs-3">
    <h2>Editing Book</h2>

    <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>error prohibited this obj from being saved:
      </h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field row">
    <p class="category-title">Title</p>
    <%= f.text_field :title %>
  </div>

  <div class="field row">
    <p class="category-title">Opinion</p>
    <%= f.text_area :body %>
  </div>
  <br>

  <div class="actions row">
    <%= f.submit 'Update Book',class: "btn btn-primary" %>
  </div>
  <% end %>
</div>


<footer>
    <div class="row">
    <div class="col-xs-8">
      <p class="line-show"><%= link_to "Show", book_path(@book) %></p> |
      <p class="line-back"><%= link_to "Back", books_path(@books) %></p>
    </div>
  </div>
</footer>
</div>

