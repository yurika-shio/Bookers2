

    <div class="col-xs-3">
      <%= h(flash[:success]) %>
      <h2>User info</h2>
      <div class="profile-container">
          <table class="table table-hover">
            <tr>
              <td>
              <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
              </td>
              <td></td>
            </tr>
            <tr>
              <td>name</td>
              <td><%= user.name %></td>
            </tr>
            <tr>
              <td>introduction</td>
              <td><%= user.introduction %></td>
            </tr>
          </table>
          <% if user.id == current_user.id %>
              <%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default btn-block glyphicon glyphicon-wrench"%>
          <% else %>
               <%= link_to "", user_path(current_user.id), class: "col-xs-12 btn btn-default btn-block glyphicon glyphicon-wrench"%>
          <% end %>
      </div>
      <div class="newbook">
        <h1>New book</h1>
        <%= form_for(book, url: books_path,method: :post) do |f| %>
        <% if book.errors.any? %>
        <div id="error_explanation">
          <h2><%= book.errors.count %>errors prohibited this obj from being saved:</h2>
          <ul>
            <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="field row">
          <p class="category-title">Title</p>
        <%= f.text_field :title, class: "category-title col-xs-12" %>
      </div>
      <div class="field row">
        <p class="category-title">Opinion</p>
        <%= f.text_area :body, class: "category-title col-xs-12" %>
      </div>
      <br>
      <div class="actions row">
        <%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary"%>
      </div>
      <% end %>
    </div>
