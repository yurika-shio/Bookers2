<div class="container">
  <div class="row">
    <%= render 'books/list', book: @book, user: current_user %>
    </div>


  <div class="col-xs-9">
    <table class="table table-hover">
      <h1>Books</h1>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(book.user) do %><%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size:'40x40'%><% end %>
          </td>
          <td><%= link_to book_path(book.id) do %><%= book.title %><% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>
