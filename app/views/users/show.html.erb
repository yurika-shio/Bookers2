<html>
<div class="container">
  <div class="row">
 <%= render 'books/list', book: @book,user: @user %>
</div>


  <div class="col-xs-9">
    <table class="table table-hover">
    <h1>Books</h1>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %></td>
        <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
        <td><%= book.body %></td>
          </tr>
        <% end %>
    </tbody>
    
  </table>
</div>
</div>
</div>
</div>
</html>