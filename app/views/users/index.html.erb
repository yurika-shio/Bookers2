<html>
<div class="container">
  <div class="row">
 <%= render 'books/list', book: @book,user:current_user %>
</div>

  <div class="col-xs-9">
    <table class="table table-hover">
      <h1>Users</h1>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
    <tbody>
      <tr>
        <td>
          <%= attachment_image_tag user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
      </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>
</html>